<UserControl x:Class="M120Projekt.OpenNewEntryForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:M120Projekt"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="Container">
        <Border Background="White" Grid.Column="6" CornerRadius="10" Margin="20, 20, 20, 20">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="5" Direction="325" BlurRadius="15"/>
            </Border.Effect>
        </Border>
        <Label Content="New entry" HorizontalAlignment="Left" Margin="40,30,0,0" VerticalAlignment="Top" FontSize="22px" FontWeight="Bold"/>
    </Grid>
</UserControl>
